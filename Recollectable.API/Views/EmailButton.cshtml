@using Recollectable.API.ViewModels
@model EmailButtonViewModel

<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td bgcolor="#FFF" align="center" style="padding: 20px 30px 20px 30px;">
            <table border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td bgcolor="#1D67BB" align="center" style="border-radius: 5px;">
                        <a href="@Model.Url" target="_blank" style="font-family: 'Segoe UI', Arial,
                        Helvetica, sans-serif; font-size: 20px; font-weight: 400;
                        line-height: 30px; color: #FFF; text-decoration: none;
                        padding: 12px 20px; display: inline-block;">
                            @Model.Text
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>